{
    "manifest_version": 3,
    "name": "LeetCode GitHub Sync",
    "version": "1.0.0",
    "description": "Automatically sync LeetCode solutions to GitHub",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://github.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}